<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nabeel.auxilio.SignUp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/emailEditText"
        android:layout_alignStart="@+id/emailEditText"
        android:layout_marginTop="16dp"
        android:id="@+id/pwdEditText"
        android:hint="New Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:text=""
        android:layout_below="@+id/pwdEditText"
        android:layout_alignStart="@+id/pwdEditText"
        android:layout_marginTop="22dp"
        android:id="@+id/cpwdEditText"
        android:hint="Confirm Password" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpwdEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/signUpButton"
        android:background="@android:color/holo_blue_light"
        android:textColor="@color/cardview_light_background"
        android:onClick="signuponClick"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="106dp"
        android:id="@+id/emailEditText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Emaid ID" />

</RelativeLayout>
