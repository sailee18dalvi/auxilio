<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_person_black_24dp"
        android:layout_marginTop="10dp"
        android:id="@+id/DP"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="updateDP"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/DP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/fnameText"
        android:hint="First Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/fnameText"
        android:layout_alignEnd="@+id/fnameText"
        android:layout_marginTop="5dp"
        android:id="@+id/mnameText"
        android:hint="Middle Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/mnameText"
        android:layout_alignEnd="@+id/mnameText"
        android:layout_marginTop="5dp"
        android:id="@+id/lnameText"
        android:hint="Last Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/lnameText"
        android:layout_alignEnd="@+id/lnameText"
        android:layout_marginTop="5dp"
        android:id="@+id/emailText"
        android:hint="Email Id"/>
    
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_below="@+id/emailText"
        android:layout_alignEnd="@+id/emailText"
        android:layout_marginTop="5dp"
        android:id="@+id/usertype"
        android:hint="Tutor/Student/Both"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/usertype"
        android:layout_alignEnd="@+id/usertype"
        android:layout_marginTop="5dp"
        android:id="@+id/conText"
        android:hint="Contact No"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_below="@+id/conText"
        android:layout_alignEnd="@+id/conText"
        android:layout_marginTop="5dp"
        android:id="@+id/dob"
        android:hint="dd/mm/yyyy"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:layout_below="@+id/dob"
        android:layout_alignEnd="@+id/dob"
        android:layout_marginTop="5dp"
        android:id="@+id/addText"
        android:hint="Address"/>

    </RelativeLayout>
</ScrollView>